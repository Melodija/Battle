<body style="background-color:#FFDCB7; border: 3px solid black">
  <div style="text-align:center">
<% if @game.current_player == @game.player_1 %>
<h1><%= @game.player_1.name %> attacked <%= @game.player_2.name %></h1>
<% else %>
<h1><%= @game.player_2.name %> attacked <%= @game.player_1.name %></h1>
<% end %>
</div>
<form action="/switch_turns" method="post">
  <div style="width:100%;height:100%;position:absolute;vertical-align:middle;text-align:center;">
  <input type="submit" value="OK">
</form>
</div>
<div style="text-align:center;vertical-align:middle">
<p><img src='https://media.giphy.com/media/pqRZWQdy0994I/giphy.gif'/></p>
</div>
</body>
